    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/frameLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/any"
        android:weightSum="6"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chamadaView"
            android:background="@drawable/ic_person_black_24dp"
            android:layout_margin="10dp"/>



        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSearchResultTitle"

            android:text="Thiago Francisco Martins"
            android:id="@+id/nameView"
            android:layout_gravity="left|top"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSearchResultTitle"
            android:text="Small Text"
            android:id="@+id/idView"
            android:layout_gravity="left|top"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/imageView2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/acceptButton"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:shadowColor="#FFFFFF"

             />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/declineButton"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/close"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/addButton"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/add"
            />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/saveChamada"

        android:layout_gravity="center"

        android:background="@drawable/ic_save_white_48dp"
        />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/changeC"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/changecam2"
            android:background="@drawable/rotate"
            android:layout_above="@+id/frameLayout2"
            android:layout_alignParentRight="true" />


    </LinearLayout>

    <!--    <FrameLayout
            android:layout_width="70dp"

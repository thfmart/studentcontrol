    <br.usp.eesc.sel.thiagofmartins.tcc.recogattendance.recognition.TutorialCamera
        android:id="@+id/tutorialCamera"
        android:layout_width="fill_parent"
        TutorialCamera:show_fps="true"
        android:layout_height="fill_parent" />


